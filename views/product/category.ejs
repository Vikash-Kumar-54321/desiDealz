<% layout("/layouts/boilerplate") -%>
<body>
    <div class="container flex-grow-1">
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% if(products.length>0){ %> 
            <% for (product of products){ %>
                <a href="/product/<%= product.id %>" class="link">
            <div class="card listing-card">
                <img src="<%=product.image.url%>" class="card-img-top" alt="image" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <b><%=product.title%></b> <br>
                  &#8377; <%= product.price.toLocaleString("en-IN")%>
                </div>
              </div>
            </a>
              <% } %>
        <% } else{ %> 
            <div class="d-flex justify-content-center align-items-center" style="height: 70vh; width: 100%;">
                <div class="text-center">
                  <img src="/images/empty-box.png" alt="No products" class="mx-auto w-32 mb-4">
                  <h2 class="text-xl font-semibold text-gray-700">No products found in this category.</h2>
                  <p class="text-gray-500">Please check back later or browse other categories.</p>
                </div>
              </div>
        <% } %> 
    
    </div>
</div>
</body>
