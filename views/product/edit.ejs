<% layout("/layouts/boilerplate") -%>
<body>
    <form action="/product/<%=data.id%>/edit?_method=PUT" class="needs-validation" method="post" novalidate>
        <div class="offset-2 mb-3 mt-3 col-8"> <h1>Edit your product</h1>
            <div class="mb-2">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="title" id="title" class="form-control" value="<%=data.title%>" required>
                <div class="invalid-feedback">
                    Please provide a valid title.
                  </div>
            </div>
            <div class="mb-2">
                <label for="description" class="form-label">Description</label>
                <textarea name="description" id="description" class="form-control" required><%=data.description%></textarea>
                <div class="invalid-feedback">
                    Please provide a valid description.
                  </div>
            </div>
                <div class="col-md-6 mb-2">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" id="price" name="price" class="form-control" value="<%=data.price%>" required>
                    <div class="invalid-feedback">
                        Please provide a valid price.
                      </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Previous Image</label><br>
                    <div class="p-2 border rounded" style="max-width: 200px; height: auto;">
                        <img src="<%=imageUrl%>" alt="Previous Image" class="img-fluid rounded" style="max-height: 150px; object-fit: cover;">
                    </div>
                </div>
            <div class="mb-2">
                <label for="image" class="form-label">Image</label>
                <input type="file" id="image" class="form-control" name="image">
                
            </div>
            
            <div class="mb-2">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="location" class="form-control" id="location" value="<%=data.location%>" required>
                <div class="invalid-feedback">
                    Please provide a valid location.
                  </div>
            </div>
            <div class="mb-3">
                <label for="categorySelect" class="form-label">Select Category</label>
                <select class="form-select" id="categorySelect" name="category" value="<%= data.category %>" required>
                  <option value="<%= data.category %>" disabled selected><%= data.category %></option>
                  <option value="fashion">Fashion</option>
                  <option value="footwear">Footwear</option>
                  <option value="electronics">Electronics</option>
                  <option value="kitchen">Kitchen Appliances</option>
                  <option value="beauty">Beauty</option>
                  <option value="mobile">Mobile</option>
                  <option value="grocery">Grocery</option>
                </select>
            </div>
            
            <button class="btn btn-outline-danger mt-3">Edit</button>
        </div>
    </form>
</body>
