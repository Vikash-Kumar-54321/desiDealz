<% layout("/layouts/boilerplate") -%>
<div class="container mt-5">
  <h1>Order Confirmed!</h1>
  <div class="card p-4 mt-3 shadow">
    <h4 class="mb-3">Order ID: <%= order._id %></h4>
    <p class="fw-semibold">Items Ordered:</p>
    <div class="list-group mb-4">
      <% for (let item of order.items) { %>
        <div class="list-group-item d-flex justify-content-between align-items-center">
          <div class="d-flex align-items-center">
            <img src="<%= item.product.image.url %>" width="80" height="80" style="object-fit: contain;" class="me-3 rounded border">
            <div>
              <h6 class="mb-1 fw-semibold"><%= item.product.title %></h6>
              <p class="mb-0 small text-muted">
                ₹<%= item.product.price %> × <%= item.quantity %> = 
                <strong>₹<%= item.product.price * item.quantity %></strong>
              </p>
            </div>
          </div>
        </div>
      <% } %>
    </div>
    <p class="fw-bold fs-5 text-end">Total: ₹<%= order.total %></p>
    <form action="/payment" method="post">
      <input type="hidden" name="price" value="<%= order.total %>">
        <button class="btn btn-outline-success">Continue Shopping</button>
    </form>
  </div>
</div>
